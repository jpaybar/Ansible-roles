# -*- mode: ruby -*-

# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  if Vagrant.has_plugin?("vagrant-proxyconf")
	config.proxy.http     = "http://yourproxy:8080"
	config.proxy.https    = "http://yourproxy:8080"
	config.proxy.no_proxy = "localhost,127.0.0.1"
  end
  
